<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:backgroundTint="#80ffcc99"
    tools:ignore="MissingDefaultResource"
    android:keepScreenOn="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:textColor="#000000"
            android:textSize="24sp"
            android:id="@+id/textview_player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="player1"
            android:fontFamily="@font/got"/>

        <TextView
            android:id="@+id/textview_player1score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@id/textview_player1"
            android:layout_toRightOf="@id/textview_player1"
            android:text="score"
            android:fontFamily="@font/got"
            android:textSize="24sp"/>

        <TextView
            android:textColor="#000000"
            android:textSize="24sp"
            android:fontFamily="@font/got"
            android:id="@+id/textview_player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="player2" />

        <TextView
            android:id="@+id/textview_player2score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/textview_player2"
            android:text="score"
            android:fontFamily="@font/got"
            android:textSize="24sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
