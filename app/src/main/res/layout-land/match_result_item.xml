<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#90ffcc99"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/matchResult_player1image"
            android:background="@drawable/player_baratheon"
            android:layout_alignParentStart="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_toRightOf="@id/matchResult_player1image"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="16sp"
            android:id="@+id/matchResult_player1name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="player1"
            android:fontFamily="@font/got"/>

        <TextView
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="#660033"
            android:layout_toRightOf="@id/matchResult_player1name"
            android:text="3"
            android:paddingBottom="5dp"
            android:id="@+id/matchResult_player1score"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/matchResult_player1name"
            android:paddingStart="12dp"
            android:paddingLeft="12dp" />


        <ImageView
            android:id="@+id/matchResult_player2image"
            android:background="@drawable/player_targaryen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_toLeftOf="@id/matchResult_player2image"
            android:textColor="#000000"
            android:textSize="16sp"
            android:id="@+id/matchResult_player2name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="8dp"
            android:paddingEnd="8dp"
            android:text="player2"
            android:fontFamily="@font/got"/>

        <TextView
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            android:textColor="#660033"
            android:layout_toLeftOf="@id/matchResult_player2name"
            android:text="3"
            android:id="@+id/matchResult_player2score"
            android:textSize="24sp"
            android:paddingEnd="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="12dp" />

        <TextView
            android:textColor="#33001a"
            android:fontFamily="@font/got"
            android:paddingTop="8dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text="02.06.2019.13:05"
            android:id="@+id/matchResult_timeFinished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/matchResult_player1image"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>